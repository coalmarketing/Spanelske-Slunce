<!-- FAQ -->
<section class="relative py-24 ~px-4/8 bg-white dark:bg-zinc-950 z-10">
    <div class="container m-auto flex flex-col items-center gap-12">
        <div class="flex max-lg:flex-col justify-center items-start ~gap-12/24 w-full">
            <!-- TEXT + CTA -->
            <div class="flex flex-col items-start gap-4">
                <!-- TOPPER + HEADING -->
                <div class="flex flex-col gap-2">
                    <span class="font-proxima-nova text-primary dark:text-secondary font-bold leading-none">Často kladené otázky</span>
                    <h2 class="dark:text-white ~text-2xl/3xl font-bold">
                        Odpovědi na vaše dotazy
                    </h2>
                </div>

                <!-- CTA BUTTON -->
                <a class="block relative px-4 py-2 bg-primary text-sm text-white font-semibold rounded-lg z-10 overflow-hidden whitespace-nowrap
                    transition-colors duration-300 hover:text-white
                    before:absolute before:top-0 before:left-0 before:h-full before:w-full before:bg-tertiary before:-z-10
                    before:scale-x-0 before:origin-left before:transition-transform before:duration-300 hover:before:scale-x-100"
                    href="/kontakt">
                    Kontaktujte nás
                </a>
            </div>

            <!-- FAQ ITEMS -->
            <div class="flex flex-col gap-4 max-w-4xl">
                <!-- FAQ ITEM -->
                <details class="group bg-zinc-100 dark:bg-zinc-900 rounded-xl">
