{% extends "layouts/base.njk" %}

{% block body %}
  {% include "components/landing.njk" %}

  <section class="py-24 ~px-4/8 bg-zinc-100 dark:bg-zinc-900">
    <div class="container m-auto flex flex-col gap-8">
      <!-- TOPPER + HEADING -->
      <div class="flex flex-col gap-1">
        <span class="font-proxima-nova text-primary dark:text-secondary font-bold leading-none">Reference našich studentů</span>
        <h1 class="dark:text-white ~text-2xl/3xl font-bold">
          Zkušenosti a reference studentů
        </h1>
      </div>

      <!-- TESTIMONAILS -->
      <ul class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        {% for testimonial in collections.testimonial | reverse %}
          <li class="flex flex-col gap-4 p-6 bg-white dark:bg-zinc-950 rounded-xl">
            <!-- STARS -->
            <div class="flex gap-1">
              {% for i in range(0, 5) %}
                <img
                  src="/assets/svgs/reviews/star-fill.svg"
                  alt="Ikonka hvězdy"
                  decoding="async"
                  loading="lazy"
                  width="16"
                  height="16"
                  draggable="false"/>
              {% endfor %}
            </div>

            <p class="max-h-32 overflow-y-auto pr-2 font-proxima-nova text-zinc-800 dark:text-zinc-200">
              {{ testimonial.data.text }}
            </p>

            <!-- SEPARATOR + AUTHOR -->
            <div class="flex flex-col gap-1 mt-auto">
              <!-- SEPARATOR -->
              <div class="flex items-center gap-2 before:h-px before:w-full before:bg-zinc-300 dark:before:bg-zinc-700">
                <svg class="fill-zinc-500 dark:fill-zinc-400" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M12 12a1 1 0 0 0 1-1V8.558a1 1 0 0 0-1-1h-1.388q0-.527.062-1.054.093-.558.31-.992t.559-.683q.34-.279.868-.279V3q-.868 0-1.52.372a3.3 3.3 0 0 0-1.085.992 4.9 4.9 0 0 0-.62 1.458A7.7 7.7 0 0 0 9 7.558V11a1 1 0 0 0 1 1zm-6 0a1 1 0 0 0 1-1V8.558a1 1 0 0 0-1-1H4.612q0-.527.062-1.054.094-.558.31-.992.217-.434.559-.683.34-.279.868-.279V3q-.868 0-1.52.372a3.3 3.3 0 0 0-1.085.992 4.9 4.9 0 0 0-.62 1.458A7.7 7.7 0 0 0 3 7.558V11a1 1 0 0 0 1 1z"/>
                </svg>
              </div>

              <!-- AUTHOR -->
              <div class="flex items-center gap-3">
                <!-- AUTHOR ICON -->
                <div class="px-0.5 pt-1.5 bg-zinc-200 dark:bg-zinc-600 rounded-full overflow-hidden">
                  <svg class="fill-zinc-600 dark:fill-zinc-300" xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" viewBox="0 0 1200 1200">
                    <path d="M939.574 858.383c-157.341-57.318-207.64-105.702-207.64-209.298c0-62.17 51.555-102.462 69.128-155.744c17.575-53.283 27.741-116.367 36.191-162.256s11.809-63.638 16.404-112.532C859.276 157.532 818.426 0 600 0C381.639 0 340.659 157.532 346.404 218.553c4.596 48.894 7.972 66.645 16.404 112.532c8.433 45.888 18.5 108.969 36.063 162.256c17.562 53.286 69.19 93.574 69.19 155.744c0 103.596-50.298 151.979-207.638 209.298C102.511 915.83 0 972.479 0 1012.5V1200h1200v-187.5c0-39.957-102.574-96.606-260.426-154.117"/>
                  </svg>
                </div>

                <div class="flex flex-col gap-1">
                  <span class="font-proxima-nova text-sm font-bold leading-none dark:text-white">{{ testimonial.data.customerName }}</span>
                  <span class="font-proxima-nova text-sm text-zinc-800 leading-none dark:text-zinc-200">Spokojený student</span>
                </div>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </section>

  {% include "components/cta.njk" %}
{% endblock body %}